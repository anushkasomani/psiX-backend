{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",              // Changed to "commonjs" for Node.js compatibility
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",                  // Will output compiled JS to dist/
    "rootDir": "src"                   // Source files are in src/
  },
  "include": ["src/**/*"]
}
